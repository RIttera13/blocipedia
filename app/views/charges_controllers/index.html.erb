<p id="notice"><%= notice %></p>

<h1>Listing Charges Controllers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges_controllers.each do |charges_controller| %>
      <tr>
        <td><%= link_to 'Show', charges_controller %></td>
        <td><%= link_to 'Edit', edit_charges_controller_path(charges_controller) %></td>
        <td><%= link_to 'Destroy', charges_controller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

