<div class="container main-content">
  <div class="center-block text-center">
    <h1 class="text-center">Wiki List</h1>
    <br>
    <br>
    <div class="text-center scroll signup-content">
      <div class="table table-responsive">
        <% @wikis.each do |wiki| %>
          <div class="media">
            <div class="media-body">
              <% if user_is_authorized_for_wiki?(wiki) || wiki.private == false %>
              <small>
                <%= link_to truncate(wiki.title, :length => 25), wiki, class: 'pull-left buffer' %>
                <%= link_to "Delete Wiki", [wiki], method: :delete, class: 'btn btn-danger upgrade pull-right', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
                <%= link_to "Edit", edit_wiki_path(wiki), class: 'btn btn-success upgrade pull-right' %>
              </small>
              <% end %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
    <br>
    <br>
    <%= link_to "New Wiki", new_wiki_path, :class => 'btn btn-signup'%>
  </div>
</div>
